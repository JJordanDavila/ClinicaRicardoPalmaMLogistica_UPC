
@{
    ViewBag.Title = "Index";
}
<h3 style="text-align: center">
    Mantenimiento de Convocatoria a postores para Proveedores
</h3>
<br />
<form>
    <div class="form-group row">    
        <label for="nroConvocatoria" class="col-sm-2">N° Convocatoria</label>
        <div class="col-sm-4">
            <input type="text" class="form-control input-sm" id="nroConvocatoria" />
        </div>
    </div>
    <div class="form-group row">
        <label for="fechaInicio" class="col-sm-2">Fecha Inicio</label>
        <div class="col-sm-2">
            <input type="datetime" class="form-control input-sm ui-datepicker date" id="fechaInicioIndex" readonly="readonly" />
        </div>
        <label for="fechaInicio" class="col-sm-2">Fecha Fin</label>
        <div class="col-sm-2">
            <input type="datetime" class="form-control input-sm ui-datepicker date" id="FechaFinIndex" readonly="readonly" />
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-primary" id="btnConsultar">Consultar</button>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <a href="@Url.Action("Nuevo", "Convocatoria")" class="btn btn-primary" style="color: white;"><span class="glyphicon glyphicon-save" id="btnNuevo"></span> Nuevo</a>
        </div>
    </div>
    <article>
        <table id="dgConvocatoriaProveedores"></table>
    </article>
</form>
@section scripts{
